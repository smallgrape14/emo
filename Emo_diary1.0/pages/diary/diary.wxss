.container{
  padding: 40rpx 0;
}
.bg{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  filter: blur(3rpx);
}
.page-body{
  width:100%;
}
.weather{
  width:100rpx;
  height:100rpx;
  margin-bottom: -20rpx;
  animation: box-ani 4s  infinite linear;
}
@keyframes box-ani {
  from {transform: rotate(0)}
  to {transform: rotate(360deg)}
}
.selector{
  display: flex;
  flex-direction:row;
  align-items: center;
  width: 100%;
}
.pickcolum1{
  font-size: xx-large;
}
.pickcolum2{
  font-size: x-large;
  color:#aaa
}

.diasta{
 margin-top: 5%;
  margin-left: 10%;
  color:rgb(100, 100, 100);
  font-size: large;
}

.round-click{
  height:120rpx;
  width: 120rpx;
  border-radius: 100%;
    position: fixed;
    top: 30rpx;
    right: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
}

/*外部容器*/
.listview-container {
  margin: 10rpx 10rpx;
  margin-bottom: 115rpx;
}
  
/*行样式*/
.playlog-item {
  display: flex;
}
  
/*时间轴*/
.playlog-item .dotline {
  width: 35px;
  position: relative;
}
  
/*竖线*/
.playlog-item .dotline .line {
  width: 1.5px;
  height: 100%;
  background: rgb(106, 209, 223);
  position: absolute;
  top: 0;
  left: 20px; 
}
  
/*圆点*/
.playlog-item .dotline .dot {
  width: 20px;
  height: 20px; 
  background: rgb(106, 209, 223);
  position: absolute; 
  top: 10px; 
  left: 10px; 
  border-radius: 100%; 
  color: #fff;
  font-size: 15px;
}
  
/*时间戳*/
.playlog-item .dotline .time {
  width: 100%;
  position: absolute;
  margin-top: 30px;
  z-index: 99;
  font-size: 12px;
  color: #777;
  text-align: center;
}
  
/*右侧主体内容*/
.playlog-item .content {
  width: 80%;
  display: flex;
  flex-direction: column;
  border-top: 1px solid rgb(106, 209, 223);
  margin: 6px 0;
}
  
/*内容部分*/
.playlog-item .content .chapter {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #999;
  white-space: normal;
  padding-right: 10px;
}
  
/*时间部分*/
.playlog-item .content .ctime {
  font-size: 28rpx;
  line-height: 50rpx;
  color: #666;
}





