/* pages/diaryCon/diarycon.wxss */

.wx-popup {
  display: flex;
  flex-direction: column;
  position: fixed;
  align-items: center;
  justify-content: space-between;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(39, 39, 39, 0.295);
  z-index:9999;
}
.popup-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  align-items: center;
  position: fixed;
  left: 50%;
  top: 50%;
  height:80%;
  width: 80%;
  max-width: 600rpx;
  border-radius: 40rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background-color: white;
  /* background: -webkit-linear-gradient(top,rgb(225,245,250),white,rgb(225,245,250)); */
}
.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 900;
}
.wx-popup-con {
  margin: 60rpx 10rpx;
  text-align: center;
  text-indent:2em;
}
.btn-more{
  display: flex;
  position: fixed;
  right:20rpx;
  bottom:20rpx;
  margin-bottom: 5rpx;
  color: #666;
}

.btn-no{
  padding-bottom:0px; padding-top:6px;
  text-align: center;
  position: absolute;
  bottom:8%;
  width:60rpx;
  height:80rpx;
  color:white;
  font-weight: 540;
  background-color: rgb(101, 190, 179);
  border-radius: 30rpx;
}

